<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.Healthcare.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui.Healthcare"
    xmlns:views="clr-namespace:Maui.Healthcare.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui.Healthcare">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Patient"
        ContentTemplate="{DataTemplate views:PatientView}"
        Route="Patient"/>

    <ShellContent
        Title="Physician"
        ContentTemplate="{DataTemplate views:PhysicianView}"
        Route="Physician"/>
</Shell>
